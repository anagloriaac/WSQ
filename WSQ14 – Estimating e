#include <iostream>
#include <stdio.h>
using namespace std;

float CalculateE (float x) {
  float z=1.0f, s=1.0f;
    for (int i=x-1;i>0;--i)
      s=1+z*s/i;

return s;
}

int main() {
  float a;

cout <<"Write the accuracy for e: ";
cin>>a;
cout << "The result is: " << CalculateE(a);

return 0;
}
