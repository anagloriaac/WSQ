#include <iostream>
#include "BigIntegerLibrary.hh"
#include <string>
using namespace std;

BigInteger fac (BigInteger n) {
  if (n==0) {
    return 1;
  }
  else {
    if (n<0) {
      return -1;
    }
    return n*fac(n-1);
  }
}

int main (){
BigInteger x;
string y;

  cout << "Please tell me a positive integer: " << endl;
  cin>>x;

  cout << "The factorial of the number is "<< fact (x) << endl;

  cout << "Wanna try another number?" << endl;
  cin>> y;

while (y == "yes") {
if (y== "no") {
  cout << "Have a nice day!!!" << endl;
}
return 0;
}
}
