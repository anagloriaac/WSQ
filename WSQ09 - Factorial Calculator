#include <iostream>
using namespace std;

int main () {

  long n;
  long fac=1;
  char y;

  cout << "Pls enter a positive integer: " << endl;
  cin >>n;

  for (int i=1;i<=n; i++) {
    fac=i*fac;
  }

  cout << "The factorial of the number is: " << fac << endl;
  cout << "Wanna try again (y/n)";
  cin >> y;

  if (y=='n') {
    cout << "Have a nice day!!!";
  }
  else {
    while (y== 'y') {
      long n;
      long fac=1;

      cin >>n;
      for (int i=1;i<=n; i++) {
        fac=i*fac;
      }
      cout << "The factorial of the number is: " << fac << endl;

    }
  }
  return 0;
}
